#pragma once

typedef enum {
	TEXTURE_REDSTONE,
	TEXTURE_PLAYER,
	__TEXTURES_END
} texture_t;

typedef struct {
  unsigned int 	 width;
  unsigned int 	 height;
  unsigned int 	 bytes_per_pixel;
  unsigned char	 pixel_data[];
} texture_info_t;

__attribute__((section(".texture_memory")))
const texture_info_t texture_memory[__TEXTURES_END] = {
		{
				1,1,1,1
		},
		{
				2,2,2,2
		}
};
