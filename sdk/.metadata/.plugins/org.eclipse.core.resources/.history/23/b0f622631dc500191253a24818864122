#pragma once

class Menu{
	public:
		enum class Position{RESTART_RESUME, LEVEL};
		enum class Level{EASY, MEDIUM, HARD};
		enum class State{GAME, PAUSED, FAILED, STARTED};

		Menu(unsigned int SizeX, unsigned int SizeY);
		char * GetBuffer(void);
		void SetState(State st);
		void SetPosition(Menu pos);
		void SetLevel(Level lv);
		void Draw(void);

	private:
		enum Position Position;
		enum Level Level;
		enum State State;
		char * Buffer;

		static const char text_restart[]={"Restart"};
		static const char text_resume[]={"Resume"};
		static const char text_level_easy[]={"Level: Easy"};
		static const char text_level_medium[]={"Level: Medium"};
		static const char text_level_hard[]={"Level: Hard"};

		static const char * text_memory[]={
				text_restart,
				text_resume,
				text_level_easy,
				text_level_medium,
				text_level_hard
		};

};
