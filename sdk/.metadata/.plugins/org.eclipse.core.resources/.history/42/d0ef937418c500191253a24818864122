#pragma once

class Menu{
public:
	enum class Menu{RESTART, RESUME, LEVEL};
	enum class Level{EASY, MEDIUM, HARD};
	enum class State{GAME, PAUSED, FAILED};

	Menu(unsigned int SizeX, unsigned int SizeY);
	char * GetBuffer(void);
	void SetState(State st);
	void SetPosition(Menu pos);
	void SetLevel(Level lv);
	void Draw(void);

private:
	enum Menu Position;
	enum Level Level;
	enum State State;

};
