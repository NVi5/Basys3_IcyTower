#pragma once

#include "stdint.h"

class Keyboard {

	private:
		uint32_t *Keys;

	public:
		enum class Key {
			KEY_SPACE	= (1 << 0),
			KEY_ENTER	= (1 << 1),
			KEY_LEFT	= (1 << 2),
			KEY_DOWN	= (1 << 3),
			KEY_RIGHT	= (1 << 4),
			KEY_UP		= (1 << 5),
			KEY_ESC		= (1 << 6)
		};

		Keyboard(uint32_t *ptrKeys);
		bool GetKeyState(Keyboard::Key key);
};
