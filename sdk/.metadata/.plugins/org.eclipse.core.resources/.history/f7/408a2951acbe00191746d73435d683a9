#include "../include/game.hpp"
#include "../include/fpga_interface.h"

Game GameInstance;

int main(){

	initialize_interface(&GameInstance);
	initialize_hardware();

    while(1){

    	int i = 0;
		while(i++ < 100000);
    	GameInstance.Run();

    	if(GameInstance.gameOver){
    		GameInstance = Game();

    	}
    }
}

