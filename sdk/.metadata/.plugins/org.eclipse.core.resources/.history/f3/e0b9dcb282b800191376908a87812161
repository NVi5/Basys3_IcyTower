#include "../include/game.hpp"

Game::Game() : 
    Player1(Point2d(0, 0), Point2d(0, 0), Point2d(0, ACCELERATION)),
    isStarted(0),
    gameTime(0.0f)
{

    this->floors[0] = Line2d( Point2d(0,FLOOR_HEIGHT), Point2d(MAX_X, FLOOR_HEIGHT) );

    for(int i = 1; i < N_FLOORS; i++){
    	this->floors[i] = Line2d::RandomLine(200, 600, MIN_X, MAX_X, FLOOR_SPACING * i + FLOOR_HEIGHT);
    }
}

void Game::Display(){

}

void Game::Run(){

	if(this->isStarted){
		for(int i = 0; i < N_FLOORS; i++){
			if (this->floors[i].moveDown(1,-64,1023) ) this->floorCounter++;
		}
	}

}

Line2d Game::GetFloor(int FloorIndex){return this->floors[FloorIndex];};
Player Game::GetPlayer(){return this->Player1;};
