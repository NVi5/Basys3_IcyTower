typedef enum {
	TEXTURE_REDSTONE,
	TEXTURE_PLAYER,
	TEXTURE_PLAYER_LEFT,
	TEXTURE_PLAYER_RIGHT,
} texture_t;

typedef struct {
  unsigned int 	 		width;
  unsigned int 	 		height;
  unsigned int			bytes_per_pixel;
  unsigned char const	*pixel_data;
} texture_info_t;

