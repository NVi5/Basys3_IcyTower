#pragma once

#include "line2d.hpp"
#include "player.hpp"
#include "point2d.hpp"

#define N_FLOORS        (6)
#define FLOOR_SPACING   (180)
#define REFRESH_FREQ    (75)
#define DELTA_T         (1/REFRESH_FREQ)

#define PLAYER_WIDTH    (16)
#define PLAYER_HEIGHT   (16)
#define FLOOR_HEIGHT	(64)

#define ACCELERATION    (-100.0f)
 #define MIN_X           (128)
 #define MAX_X           (1280 - 128)
 #define MIN_Y           (0)
 #define MAX_Y           (1024)

class Game{

    private:
        Line2d floors[N_FLOORS];
        Player Player1;
        bool isStarted;
        float gameTime;
        int floorCounter;

    public:
        Game();
        void Display();
        void Run();

        Line2d& GetLine(int LineIndex);
};
