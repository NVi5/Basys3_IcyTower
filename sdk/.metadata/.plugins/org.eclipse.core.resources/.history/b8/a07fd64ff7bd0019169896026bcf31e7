#include "xstatus.h"
#include "../include/game.hpp"

#include "../include/fpga_interface.h"
#include "xil_printf.h"

Game GameInstance;

int main(){

    xil_printf("dupxo\r\n");

	initialize_interface(&GameInstance);
	initialize_hardware();

    while(1){

    	int i = 0;
		while(i++ < 100000);
    	GameInstance.Run();

    	if(GameInstance.gameOver){
    		GameInstance = Game();
    	}

    	interface_update();
    }
}

