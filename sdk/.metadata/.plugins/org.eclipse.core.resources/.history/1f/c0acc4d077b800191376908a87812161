#ifndef INCLUDE_TEXTURES_H_
#define INCLUDE_TEXTURES_H_

typedef struct {
  unsigned int 	 width;
  unsigned int 	 height;
  unsigned int 	 bytes_per_pixel; /* 2:RGB16, 3:RGB, 4:RGBA */
  unsigned char	 pixel_data[16 * 16 * 2 + 1];
} image_t;

#endif /* INCLUDE_TEXTURES_H_ */
