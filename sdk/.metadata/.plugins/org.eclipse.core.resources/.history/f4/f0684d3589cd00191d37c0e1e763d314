#include "../include/level.hpp"

	Level::Level() : AccelRate{1,2,3,4,5}, MaxWidth{400,300,200,100,50}, MinWidth{300,200,100,50,25} {};

	unsigned int Level::GetAccelRate(unsigned int LvIndex){
		if(LvIndex < N_STAGES) return this->AccelRate[LvIndex];
		else return 0;
	}

	unsigned int Level::GetMaxWidth(unsigned int LvIndex){
		if(LvIndex < N_STAGES) return this->MaxWidth[LvIndex];
		else return 0;
	}

	unsigned int Level::GetMinWidth(unsigned int LvIndex){
		if(LvIndex < N_STAGES) return this->MinWidth[LvIndex];
		else return 0;
	}
